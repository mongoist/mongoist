{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-var": "error",
    "prefer-const": "error"
  },
  "overrides": [
    { "files": ["test/**/*.js"], "parserOptions": { "ecmaVersion": 2018 } },
    { "files": ["index.js.flow"], "parser": "babel-eslint", "rules": { "no-unused-vars": "off" } }
  ]
}
